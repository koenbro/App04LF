
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:columnCount="3"
                    android:padding="16dp">


            <TextView
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="wrap_content"
                style="?android:listSeparatorTextViewStyle"
                android:padding="10dp"
                android:text="@string/film_to_match"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="wrap_content"
                style="?android:listSeparatorTextViewStyle"
                android:padding="10dp"
                android:text="@string/filter_to_match"
                android:layout_weight="1"
            android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:padding="10dp"
                android:text="@string/name"
                android:textColor="@color/Gainsboro"
                />

            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/label_film_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/film_name"
                android:textColor="@color/Crimson"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_row="1"
                android:layout_column="2"
                android:id="@+id/label_filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/film_name"
                android:textColor="@color/Crimson"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/film_type"
                android:textColor="@color/Gainsboro"/>

            <TextView
                android:layout_row="2"
                android:layout_column="1"
                android:id="@+id/label_film_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/film_type"
                android:textColor="@color/Gainsboro"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/is_filter_for_bw"
                android:textColor="@color/Gainsboro"/>

            <TextView
                android:layout_row="3"
                android:layout_column="2"
                android:id="@+id/label_is_filter_bw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/film_name"
                android:textColor="@color/Gainsboro"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_row="4"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/is_filter_for_color"
                android:textColor="@color/Gainsboro"/>

            <TextView
                android:layout_row="4"
                android:layout_column="2"
                android:id="@+id/label_is_filter_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/film_name"
                android:textColor="@color/Gainsboro"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_row="5"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/filter_factor"
                />

            <EditText
                android:layout_row="5"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="center_horizontal"
                android:id="@+id/editTextFFspecific"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="1.0"
                android:inputType="numberDecimal"
                android:textColor="@color/Crimson"/>

        </GridLayout>
